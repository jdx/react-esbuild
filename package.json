{
  "name": "react-esbuild",
  "version": "0.0.0",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "snowpack": "^3.5.7"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.1.0",
    "@snowpack/plugin-react-refresh": "^2.5.0",
    "@snowpack/plugin-typescript": "^1.2.1",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "esbuild": "^0.12.8",
    "eslint": "^7.28.0",
    "eslint-plugin-react": "^7.24.0",
    "http-server": "^0.12.3",
    "prettier": "^2.3.1",
    "typescript": "^4.3.2"
  },
  "private": true,
  "scripts": {
    "build": "esbuild lib/app.tsx lib/background.ts --bundle --outdir=dist/js --sourcemap --minify",
    "lint": "yarn lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier -c .",
    "prettier": "prettier -w .",
    "dev": "yarn build --servedir=dist",
    "snowpack:dev": "snowpack dev"
  },
  "browserslist": "last 1 version, >1%",
  "xbrowserslist": "last 2 Chrome versions"
}
